<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout
        android:id="@+id/colorPickerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <cheetatech.com.colorhub.view.ColorPickerView
            android:id="@+id/colorpickerview__color_picker_view1"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/groupLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@android:color/transparent"
        android:layout_below="@+id/colorPickerLayout"
        android:layout_marginBottom="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/colorLinearLayout"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@id/colorView"
                android:background="@color/colorDrawerText"
                android:layout_above="@+id/keyboardLayout"
                android:elevation="2dp"
                >
                <TextView
                    android:id="@+id/color"
                    android:text="#FFFFFFFF"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAllCaps="true"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

